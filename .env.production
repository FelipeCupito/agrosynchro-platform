# AgroSynchro Production Environment Configuration
# Copy to .env for production deployment

# Redis Configuration (AWS ElastiCache or ECS service)
REDIS_HOST=agrosynchro-redis.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# Processing Engine (AWS ECS or EC2)
PROCESSING_ENGINE_HOST=agrosynchro-processing.cluster.local
PROCESSING_ENGINE_PORT=8080

# S3 Configuration (Real AWS S3)
S3_ENDPOINT=
S3_BUCKET=agrosynchro-drone-images-prod
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# MinIO Configuration (Not used in production)
MINIO_ROOT_USER=
MINIO_ROOT_PASSWORD=

# Database (Could be RDS or persistent volume)
DATABASE_PATH=/data/processing.db

# IoT Gateway (AWS Load Balancer or ECS service)
IOT_GATEWAY_HOST=agrosynchro-iot.cluster.local
IOT_GATEWAY_PORT=8081

# Web Service (AWS Load Balancer or ECS service)
WEB_SERVICE_HOST=agrosynchro-web.cluster.local
WEB_SERVICE_PORT=3000

# Environment
ENVIRONMENT=production